@{
    ViewData["Title"] = "Admin Dashboard";
}

<h1>Admin Dashboard</h1>

<div class="dashboard">
    <div class="card">
        <h3>Manage Users</h3>
        <p>View, edit, or delete users in the system.</p>
        <a href="@Url.Action("Index", "UserManagement")" class="btn btn-primary">Manage Users</a>
    </div>

    <div class="card">
        <h3>Manage Devices</h3>
        <p>View, add, or remove devices.</p>
        <a href="@Url.Action("ManageDevices", "Device")" class="btn btn-primary">Manage Devices</a>
    </div>

    <div class="card">
        <h3>Manage Rooms</h3>
        <p>Organize rooms and assign devices to rooms.</p>
        <a href="@Url.Action("ManageRooms", "Room")" class="btn btn-primary">Manage Rooms</a>
    </div>
</div>
