@using SmartHome.Web.ViewModels.Room;
@model RoomDescriptionModel

@{
    ViewData["Title"] = "Delete Room";
}

<h1>Delete Room</h1>

<div>
    <h4>Are you sure you want to delete this room?</h4>
    <dl class="row">
        <dt class="col-sm-2">
            Room Name
        </dt>
        <dd class="col-sm-10">
            @Model.RoomName
        </dd>
    </dl>
</div>

<form asp-action="SoftDelete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
