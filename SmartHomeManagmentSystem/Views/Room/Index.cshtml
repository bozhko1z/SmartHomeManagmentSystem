@model IEnumerable<SmartHome.Web.ViewModels.Room.RoomIndexViewModel>


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Room List</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
</head>
<body>
    <div class="container mt-5">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h1>Room List</h1>
            <a href="/Room/Add" class="btn btn-success">Add New Room</a>
        </div>
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Room Name</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    int count = 1;
                    foreach (var room in Model)
                    {
                        <tr>
                            <td>@count</td>
                            <td>@room.RoomName</td>
                            <td>
                                <a href="/Room/RoomDescription/@room.Id" class="btn btn-sm btn-info">Description</a>
                            </td>
                        </tr>
                        count++;
                    }
                }
                else
                {
                    <tr>
                        <td colspan="3" class="text-center">No rooms available.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>


