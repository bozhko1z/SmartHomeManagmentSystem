@model SmartHome.Web.ViewModels.Room.RoomDescriptionModel
@using SmartHome.Web.ViewModels.Device

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Room Description</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
</head>
<body>
    <div class="container mt-5">
        <h1>Room Description</h1>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">Room Name</dt>
            <dd class="col-sm-9">@Model.RoomName</dd>
        </dl>

        <h2>Devices in this Room</h2>
        <hr />
        @if (Model.Devices != null && Model.Devices.Any())
        {
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Device Name</th>
                        <th>Type</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (RoomDeviceViewModel device in Model.Devices)
                    {
                        <tr>
                            @* <td>@device.Id</td> *@
                            <td>@device.Name</td>
                            <td>@device.Type</td>
                            <td>
                                @if (device.Status)
                                {
                                    <span class="badge bg-success">On</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Off</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p class="text-muted">No devices in this room.</p>
        }

        <a href="/Room" class="btn btn-secondary mt-3">Back to List</a>
    </div>
</body>
</html>


