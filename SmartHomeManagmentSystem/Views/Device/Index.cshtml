@model IEnumerable<SmartHome.Data.Models.Device>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Device List</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
</head>
<body>
    <div class="container mt-5">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h1>Device List</h1>
            @if (User?.Identity?.IsAuthenticated ?? false)
            {
                <a href="/Device/Add" class="btn btn-success">Add New Device</a>
            }
        </div>
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Type</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var device in Model)
                    {
                        <tr>
                            <td>@device.DeviceName</td>
                            <td>@device.Type</td>
                            <td>
                                @if (device.Status)
                                {
                                    <span class="badge bg-success">On</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Off</span>
                                }
                            </td>
                            <td>
                                <!-- Actions -->
                                <a href="/Device/Description/@device.Id" class="btn btn-sm btn-info">Description</a>
                                @if (User?.Identity?.IsAuthenticated ?? false)
                                {
                                    <a href="/Device/AddToRoom/@device.Id" class="btn btn-sm btn-info">Add To Room</a>
                                    @* <button class="btn btn-sm btn-primary">Edit</button>
                                    <button class="btn btn-sm btn-danger">Delete</button> *@
                                    <form asp-controller="DeviceWatchList" asp-action="AddToWatchList" method="post" class="d-inline">
                                        <input type="hidden" name="deviceId" value="@device.Id" />
                                        <button type="submit" class="btn btn-warning">+WatchList</button>
                                    </form>
                                }
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="4" class="text-center">No devices available.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>


