@model SmartHome.Web.ViewModels.Device.DeviceDescriptionViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Device Description</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
</head>
<body>
    <div class="container mt-5">
        <h1>Device Details</h1>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">Name</dt>
            <dd class="col-sm-9">@Model.DeviceName</dd>

            <dt class="col-sm-3">Type</dt>
            <dd class="col-sm-9">@Model.Type</dd>

            <dt class="col-sm-3">Status</dt>
            <dd class="col-sm-9">
                @if (Model.Status)
                {
                    <span class="badge bg-success">On</span>
                }
                else
                {
                    <span class="badge bg-danger">Off</span>
                }
            </dd>
        </dl>
        <a href="/Device/Index" class="btn btn-secondary">Back to List</a>
    </div>
</body>
</html>
