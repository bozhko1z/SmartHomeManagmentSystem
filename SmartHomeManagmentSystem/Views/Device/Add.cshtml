@model SmartHome.Web.ViewModels.Device.AddDeviceInputModel;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Add New Device</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
</head>
<body>
    <div class="container mt-5">
        <h1 class="mb-4">Add New Device</h1>
        <form asp-action="Add" method="post">
            <div class="mb-3">
                <label for="DeviceName" class="form-label">Device Name</label>
                <input type="text" class="form-control" id="DeviceName" name="DeviceName" required />
                <span asp-validation-for="DeviceName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="TypeId" class="form-label">Device Type</label>
                <select asp-for="TypeId" asp-items="ViewBag.DeviceTypes" class="form-select">
                    <option value="" disabled selected>-- Select a Device Type --</option>
                </select>
                <span asp-validation-for="TypeId" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label for="Status" class="form-label">Device Status</label>
                <select class="form-select" id="Status" name="Status" required>
                    <option value="true">On</option>
                    <option value="false">Off</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Add Device</button>
            <a href="/Device/Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</body>
</html>
