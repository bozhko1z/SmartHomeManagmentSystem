
@model SmartHome.Data.Models.Device

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Add New Device</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
</head>
<body>
    <div class="container mt-5">
        <h1 class="mb-4">Add New Device</h1>
        <form asp-action="Add" method="post">
            <!-- Device Name -->
            <div class="mb-3">
                <label for="Name" class="form-label">Device Name</label>
                <input type="text" class="form-control" id="Name" name="Name" placeholder="Enter device name" required />
            </div>

            <!-- Device Type -->
            <div class="mb-3">
                <label for="Type" class="form-label">Device Type</label>
                <input type="text" class="form-control" id="Type" name="Type" placeholder="Enter device type" required />
            </div>

            <!-- Device Status -->
            <div class="mb-3">
                <label for="Status" class="form-label">Device Status</label>
                <select class="form-select" id="Status" name="Status" required>
                    <option value="true">On</option>
                    <option value="false">Off</option>
                </select>
            </div>

            <!-- Submit Button -->
            <button type="submit" class="btn btn-primary">Add Device</button>
            <a href="/Device/Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</body>
</html>
