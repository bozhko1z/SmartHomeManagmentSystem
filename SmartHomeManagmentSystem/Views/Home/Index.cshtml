@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-5">
    <!-- Welcome Section -->
    <div class="text-center mb-5">
        <h1 class="display-4">Welcome to Smart Home Management</h1>
        <p class="lead">Effortlessly manage your devices and rooms in one place.</p>
        <hr class="my-4" />
    </div>

    <!-- Action Cards -->
    <div class="row justify-content-center">
        <!-- Device Management Card -->
        <div class="col-md-4">
            <div class="card shadow-lg border-primary">
                <div class="card-body text-center">
                    <i class="bi bi-laptop display-3 text-primary"></i>
                    <h5 class="card-title mt-3">Devices Management</h5>
                    <p class="card-text">View and manage all your smart devices. Turn them on/off or assign them to rooms.</p>
                    <a asp-controller="Device" asp-action="Index" class="btn btn-primary">Manage Devices</a>
                </div>
            </div>
        </div>

        <!-- Room Management Card -->
        <div class="col-md-4">
            <div class="card shadow-lg border-secondary">
                <div class="card-body text-center">
                    <i class="bi bi-house-door-fill display-3 text-secondary"></i>
                    <h5 class="card-title mt-3">Rooms Management</h5>
                    <p class="card-text">Organize your devices by rooms for better control and monitoring.</p>
                    <a asp-controller="Room" asp-action="Index" class="btn btn-secondary">Manage Rooms</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Features Section -->
    <div class="mt-5">
        <h3 class="text-center mb-4">Features</h3>
        <div class="row text-center">
            <div class="col-md-4">
                <i class="bi bi-lightbulb-fill display-4 text-warning"></i>
                <h5 class="mt-2">Smart Control</h5>
                <p>Control all your smart devices from a single platform.</p>
            </div>
            <div class="col-md-4">
                <i class="bi bi-layout-text-sidebar-reverse display-4 text-info"></i>
                <h5 class="mt-2">Room Organization</h5>
                <p>Group devices by rooms for easier management and accessibility.</p>
            </div>
            <div class="col-md-4">
                <i class="bi bi-bar-chart-fill display-4 text-success"></i>
                <h5 class="mt-2">Insights</h5>
                <p>Get insights on device usage and room activity.</p>
            </div>
        </div>
    </div>
